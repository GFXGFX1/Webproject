from django.db import models
from django.contrib.auth.models import User


class Room(models.Model):
    a = models.CharField(max_length=20)
    b = models.SlugField(max_length=100)

    def __str__(self):
        return "Room : " + self.a + "; Id : " + self.b

class Soobssh(models.Model):
    q = models.ForeignKey(User, on_delete=models.CASCADE)
    otv = models.TextField()
    w = models.ForeignKey(Room, on_delete=models.CASCADE)
    e = models.DateTimeField(auto_now_add=True)

    def __str__(self):
        return "Сообщение: " + self.otv
